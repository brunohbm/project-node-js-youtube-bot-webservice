{
    "parser": "babel-eslint",
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "max-len": "off",
        "arrow-body-style": "off",
        "class-methods-use-this": "off",
        "no-useless-constructor": "off",
        "import/no-useless-path-segments": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "info"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ],
        "linebreak-style": 0
    }
}
